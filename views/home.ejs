<%- include("header"); -%>

<h1>Home</h1>
<p style="font-size:17px; word-wrap: break-word; width:800px;"><%= content %></p>

<% posts.forEach( function (post) { %>
    <h1><%= post.title %></h1>
    <p>
        <%= post.content.substr(0,100)+"..." %>
        <a href="posts/<%= post._id %>">Read More</a>
    </p>
    
<% }); %>

